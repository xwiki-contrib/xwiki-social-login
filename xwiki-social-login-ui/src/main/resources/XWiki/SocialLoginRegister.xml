<content>{{velocity}}
#set($showForm = true)
#if($request.method.equalsIgnoreCase('post'))
  ##
  ## Perform verification steps here...
  ##
  #set($formIsValid = true)
  #if ("$!request.country" == '')
    #set($formIsValid = false)
{{error}}
Country is mandatory
{{/error}}
  #end
  #if($formIsValid)
    #set($ok = $services.socialAuth.registerUser())
    #if ($ok)
      #set($showForm = false)
{{info}}
Your account has been successfully created [[Log-in and continue to your wiki&gt;&gt;Main.WebHome]]
{{/info}}
    #else
{{error}}
Failed to register
{{/error}}
    #end
  #end

#end
##
## First, let's get the current profile (org.brickred.socialauth.Profile) that has been associated with the current user session.
## If no profile is present, it means the user never has connected his social account, and has nothing to do here.
##
#set($profile = $services.socialAuth.sessionProfile)
#if(!$profile)
{{warning}}
Invalid workflow
{{/warning}}
#elseif($showForm)
  ##
  ## We have a profile associated with the session. Onward.
  {{html clean=false}}
&lt;p&gt;
  &lt;br /&gt;
  Sign up here so you can edit pages and participate in the wiki.
&lt;/p&gt;
#set($retrievedProperties = {})
#foreach($property in ["firstName", "lastName", "email"])
  #set($toEvaluate = "${escapetool.D}profile.${property}")
  #set($ok = $retrievedProperties.put($property, "#evaluate($toEvaluate)"))
#end
&lt;form action="$doc.getURL('view')" method="post" class="xform third"&gt;
  ## This is a fake form. We use it just for the (CSS) styles
  ## There no button to submit it.
  #foreach($property in $retrievedProperties.keySet())
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;label&gt;$property&lt;/label&gt;
      &lt;/dt&gt;
      &lt;dd&gt;
        &lt;input type="text" disabled value="$retrievedProperties.get($property)" /&gt;
      &lt;/dd&gt;
    &lt;/dl&gt;
  #end
&lt;/form&gt;
&lt;form action="$doc.getURL('view')" method="post" class="xform third"&gt;
  &lt;fieldset&gt;
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;label&gt;Country&lt;span class="xRequired"&gt;(Required)&lt;/span&gt;&lt;/label&gt;
      &lt;/dt&gt;
      &lt;dd&gt;
        &lt;input type="text" name="country" value="$!request.country" placeholder="your country..."/&gt;
      &lt;/dd&gt;
    &lt;/dl&gt;
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;label&gt;Language&lt;/label&gt;
      &lt;/dt&gt;
      &lt;dd&gt;
        &lt;select name="language"&gt;
          &lt;option value="en"&gt;English&lt;/option&gt;
          &lt;option value="fr"&gt;French&lt;/option&gt;
        &lt;/select&gt;
      &lt;/dd&gt;
    &lt;/dl&gt;
    &lt;div class="buttons"&gt;
      &lt;input type="submit" value="Confirm registration" class="button" /&gt;
  &lt;/fieldset&gt;
  &lt;/div&gt;
&lt;/form&gt;
  {{/html}}
#end
{{/velocity}}</content></xwikidoc>
